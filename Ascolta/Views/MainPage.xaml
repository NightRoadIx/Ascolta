<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ascolta.Views.MainPage"
             xmlns:viewmodels="clr-namespace:Ascolta.ViewModels"
             Title="Ascolta">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Ascolta 🎧"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="{Binding ToggleButtonText}"
                Command="{Binding ToggleListeningCommand}"
                HorizontalOptions="Center"
                />

        <Editor Text="{Binding Transcription}"
                AutoSize="TextChanges"
                Placeholder="Aquí aparecerá la transcripción..."
                HeightRequest="200" />

    </VerticalStackLayout>

</ContentPage>
